<AnchorPane prefHeight="472.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #4F81BD, #1B365D);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainWindow">
    <children>
        <VBox alignment="CENTER" layoutX="7.0" layoutY="120.0" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="SmartSteps - Gestion des Cours" textAlignment="CENTER" wrappingWidth="600.0">
                    <font>
                        <Font name="Arial" size="24.0" />
                    </font>
                </Text>

                <Button fx:id="societeButton" mnemonicParsing="false" onAction="#societeAction" prefHeight="40.0" prefWidth="200.0" text="SOCIETE">
                    <style>
                        -fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF);
                        -fx-background-radius: 5px;
                        -fx-border-radius: 5px;
                        -fx-text-fill: #1B365D;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                    </style>
                </Button>

                <Button fx:id="partenaireButton" mnemonicParsing="false" onAction="#partenaireAction" prefHeight="40.0" prefWidth="200.0" text="PARTENAIRE">
                    <style>
                        -fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF);
                        -fx-background-radius: 5px;
                        -fx-border-radius: 5px;
                        -fx-text-fill: #1B365D;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                    </style>
                </Button>

                <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitAction" prefHeight="40.0" prefWidth="200.0" text="EXIT">
                    <style>
                        -fx-background-color: linear-gradient(to bottom, #FFFFFF, #B2CCFF);
                        -fx-background-radius: 5px;
                        -fx-border-radius: 5px;
                        -fx-text-fill: #1B365D;
                        -fx-font-size: 14px;
                        -fx-font-weight: bold;
                    </style>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
