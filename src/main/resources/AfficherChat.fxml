        <TextArea fx:id="chatOutput" editable="false" prefHeight="162.0" prefWidth="200.0" style="-fx-font-size: 14px;" />

        <Button text="Supprimer" onAction="#deleteChat" style="-fx-font-size: 14px;" />
    </VBox>

    <ListView fx:id="listProjet" layoutX="184.0" layoutY="233.0" prefHeight="221.0" prefWidth="334.0" style="-fx-font-size: 14px;" />

    <!-- Add other UI components and event handlers as needed -->
