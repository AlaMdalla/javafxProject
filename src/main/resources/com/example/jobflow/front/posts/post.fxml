<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="CENTER" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jobflow.controllers.front.posts.postController">
    <AnchorPane>

        <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="15.0">
            <TextField fx:id="idPost" editable="false" layoutX="-100" layoutY="-100" prefWidth="80.0" style="-fx-border-color: transparent;" visible="false" />
            <HBox spacing="10.0">
                <VBox spacing="5.0">
                    <TextField fx:id="SharName" layoutX="178.0" layoutY="4.0" visible="false" />
                    <TextField fx:id="ShareComment" layoutX="384.0" layoutY="9.0" visible="false" />
                </VBox>
                <VBox spacing="5.0" />
                <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="490.0" spacing="10.0">
                    <children>
                        <TextField fx:id="nomPost" prefHeight="26.0" prefWidth="87.0" styleClass="aggodStyle" text="John Doe" />
                        <TextField fx:id="DatePost" prefHeight="26.0" prefWidth="114.0" styleClass="aggodStyle" text="time" />
                        <TextField fx:id="TagPost" prefHeight="26.0" prefWidth="101.0" styleClass="aggodStyle" text="John Doe" />
                        <ImageView fx:id="editphoto" fitHeight="31.0" fitWidth="47.0" onMouseClicked="#navtoupdate" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/posts/edit.png" />
                            </image>
                        </ImageView>
                        <ImageView fx:id="deletephoto1" fitHeight="31.0" fitWidth="47.0" layoutX="288.0" layoutY="10.0" onMouseClicked="#delete" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/posts/close.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>
            </HBox>
            <!-- Content -->
            <HBox spacing="10.0">
                <TextArea fx:id="ContenuPost" promptText="Write your post here..." wrapText="true" HBox.hgrow="ALWAYS" />
                <ImageView fx:id="imagePost" fitHeight="206.0" fitWidth="202.0" pickOnBounds="true" preserveRatio="true" styleClass="postImage">
                    <image>
                        <Image url="@../../../../../favicon.png" />
                    </image>
                </ImageView>
            </HBox>

            <HBox spacing="10.0">
                <Button fx:id="commentButton" onAction="#navigatetoPost" text="Comment" />
                <Button fx:id="shareButton" onAction="#sharePost" text="Share" />
                <ImageView fitHeight="47.0" fitWidth="65.0" onMouseClicked="#incrementlikes" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../images/posts/likejpg.jpg" />
                    </image>
                </ImageView>
                <TextField fx:id="likes" prefHeight="26.0" prefWidth="75.0" styleClass="no-border" text="1" />
                <ImageView fitHeight="47.0" fitWidth="65.0" onMouseClicked="#incrementdislikes" pickOnBounds="true" preserveRatio="true" rotate="180.0">
                    <image>
                        <Image url="@../../images/posts/likejpg.jpg" />
                    </image>
                </ImageView>
                <TextField fx:id="dislikes" prefHeight="26.0" prefWidth="86.0" styleClass="no-border" text="2" />
            </HBox>
        </VBox>
    </AnchorPane>
</StackPane>