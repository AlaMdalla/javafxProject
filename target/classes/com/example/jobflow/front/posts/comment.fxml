<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jobflow.controllers.front.posts.postController">
   <children>
      <!-- Profile Picture -->
      <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../src/main/resources/com/example/jobflow/images/profile_picture.png" />
         </image>
      </ImageView>
      <!-- Comment Content -->
      <TextArea fx:id="comment_contenu" editable="false" layoutX="60.0" layoutY="10.0" prefHeight="100.0" prefWidth="330.0" promptText="Write a comment..." style="-fx-border-color: transparent;" />
      <!-- Name Field -->
      <TextField fx:id="comment_name" editable="false" layoutX="60.0" layoutY="115.0" prefHeight="26.0" prefWidth="120.0" promptText="Name" style="-fx-border-color: transparent;" />
      <!-- Date Field -->
      <TextField fx:id="comment_date" editable="false" layoutX="190.0" layoutY="115.0" prefHeight="26.0" prefWidth="100.0" promptText="Date" style="-fx-border-color: transparent;" />
      <!-- Time Field -->
      <TextField fx:id="comment_time" editable="false" layoutX="300.0" layoutY="115.0" prefHeight="26.0" prefWidth="90.0" promptText="Time" style="-fx-border-color: transparent;" />
      <!-- Edit Button -->
      <ImageView fx:id="editphoto" fitHeight="20.0" fitWidth="20.0" layoutX="60.0" layoutY="145.0" onMouseClicked="#navToCommentUpdate" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: transparent;">
         <image>
            <Image url="@../../../../../../../src/main/resources/com/example/jobflow/images/posts/edit.png" />
         </image>
      </ImageView>
      <!-- Delete Button -->
      <ImageView fx:id="deletephoto1" fitHeight="20.0" fitWidth="20.0" layoutX="90.0" layoutY="145.0" onMouseClicked="#delete_Comment" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: transparent;">
         <image>
            <Image url="@../../../../../../../src/main/resources/com/example/jobflow/images/posts/close.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
